<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="#FAFAFA"
    tools:ignore="ExtraText">

    <!-- Left Chat Bubble -->
    <LinearLayout
        android:id="@+id/left_chat_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="#E3F2FD"
    android:padding="12dp"
    android:layout_marginEnd="80dp"
    android:layout_alignParentStart="true">

    <TextView
        android:id="@+id/left_chat_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Left chat message"
        android:textColor="#0D47A1"
    android:textSize="16sp"
    android:fontFamily="sans-serif" />
</LinearLayout>

    <!-- Right Chat Bubble -->
<LinearLayout
android:id="@+id/right_chat_view"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:background="@drawable/rounded_corner"
android:backgroundTint="#C8E6C9"
    android:padding="12dp"
    android:layout_marginStart="80dp"
    android:layout_alignParentEnd="true">

<TextView
android:id="@+id/right_chat_text_view"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Right chat message"
android:textColor="#1B5E20"
    android:textSize="16sp"
    android:fontFamily="sans-serif" />
    </LinearLayout>

    </RelativeLayout>
